    "keywords": ["movie", "organizer", "film", "collection"],
    "require": {
        "php":                          ">=7",
        "twig/twig":                    "1.*",
        "guzzlehttp/guzzle":            "4.*",
        "wtfzdotnet/php-tmdb-api":      "1.*",
        "symfony/console":              "2.*",
        "symfony/filesystem":           "2.*",
        "symfony/dom-crawler":          "2.*",
        "symfony/css-selector":         "2.*",
        "monolog/monolog":              "1.*",
        "league/flysystem":             "1.*",
        "composer/composer":            "1.*@dev"
    },
    "require-dev": {
        "mockery/mockery":                   "0.*",
        "mikey179/vfsStream":                "1.*",
        "lstrojny/phpunit-clever-and-smart": "0.*",
        "johnkary/phpunit-speedtrap":        "~1.0@dev",
        "phpunit/phpunit": "^5.4"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Michael Haeuslmann",
            "email": "haeuslmann@gmail.com"
        }
