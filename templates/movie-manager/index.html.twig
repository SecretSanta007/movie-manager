<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <title>Movie Manager</title>
    <link rel="stylesheet" href="/css/styles.min.css" />
    <link rel="icon" type="image/png" href="/media/favicon.png" />
</head>
<body>
    <div class="container">
        <div class="row">

            <div class="col-md-2">
                <img src="/media/logo.png" alt="Movie Helper Logo" width="128" height="128" />
            </div>

            <div class="col-md-6 title">
                <h1>Movie Helper</h1>
            </div>

            <div class="col-md-4 center searchbar">
                <form class="form-inline form-search" role="form">
                    <div class="form-group">
                        <div class="input-group">
                            <div class="input-group-addon">
                                <span class="glyphicon glyphicon-search"></span>
                            </div>
                            <input name="dir" type="text" class="form-control search-query"
                               placeholder="Movie directory ..."/>
                        </div>
                    </div>
                    <div class="form-group">
                            <button type="submit" class="btn btn-default">Search</button>
                    </div>
                </form>
            </div>

        </div>
        <div class="row">
            <div class="col-md-12">
                {% if files is not empty %}
                    <table class="table table-hover movies">
                        <thead>
                            <tr>
                                <th class="index">#</th>
                                <th class="filename">Filename</th>
                                <th class="chunks">Chunks</th>
                                <th class="folder">Folder</th>
                                <th class="link">Info</th>
                                <th class="screenshot">Screeny</th>
                                <th class="poster">Poster</th>
                                <th class="format">Format</th>
                                <th class="action"></th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for file in files %}
                                <tr>
                                    <td class="index">{{ loop.index }}</td>
                                    <td class="filename">
                                        {{ file.name }}
                                    </td>
                                    <td class="chunks">
                                        {% for chunk in file.chunks %}
                                            <button type="button" class='btn btn-xs btn-default chunk'>
                                                {{ chunk }}
                                            </button>
                                        {% endfor %}
                                    </td>
                                    <td class="folder">
                                        {% if file.folder %}
                                            <span class="glyphicon glyphicon-ok"></span>
                                        {% else %}
                                            <span class="glyphicon glyphicon-remove"></span>
                                        {% endif %}
                                    </td>
                                    <td class="link">
                                        {% if file.link %}
                                            <span class="glyphicon glyphicon-ok"></span>
                                        {% else %}
                                            <span class="glyphicon glyphicon-remove"></span>
                                        {% endif %}
                                    </td>
                                    <td class="screenshot">
                                        {% if file.screenshot %}
                                            <span class="glyphicon glyphicon-ok"></span>
                                        {% else %}
                                            <span class="glyphicon glyphicon-remove"></span>
                                        {% endif %}
                                    </td>
                                    <td class="poster">
                                        {% if file.poster %}
                                            <span class="glyphicon glyphicon-ok"></span>
                                        {% else %}
                                            <span class="glyphicon glyphicon-remove"></span>
                                        {% endif %}
                                    </td>
                                    <td class="format">
                                        {% if file.format %}
                                            <span class="glyphicon glyphicon-ok"></span>
                                        {% else %}
                                            <span class="glyphicon glyphicon-remove"></span>
                                        {% endif %}
                                    </td>
                                    <td class="action">
                                        <button class="btn btn-xs btn-info go-imdb" value="{{ file.path }}">GO</button>
                                    </td>
                                </tr>
                                <tr class="suggestionsRow">
                                    <td colspan="9">
                                        <h2>IMDb Movie Search Results:</h2>
                                        <ul class="suggestions center"></ul>
                                        <input type="hidden" value="{{ file.fullname }}" class="file" />
                                        <div class="center clearfix">
                                            <button class="btn btn-danger hide-suggestions">Cancel</button>
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                {% else %}
                    <p class="text-warning center">Please, choose a folder.</p>
                {% endif %}
            </div>
        </div>
    </div>
    <script src="/js/scripts.min.js"></script>
</body>
</html>