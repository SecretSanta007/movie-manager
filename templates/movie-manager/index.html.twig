<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <title>Movie Manager</title>
    <link rel="stylesheet" href="/css/styles.min.css" />
    <link rel="icon" type="image/png" href="/media/favicon.png" />
</head>
<body>
    <div class="container">
        <div class="row">

            <div class="col-md-2">
                <img src="/media/logo.png" alt="Movie Helper Logo" width="64" height="64" />
            </div>

            <div class="col-md-6 title">
                <h1>Movie Helper</h1>
            </div>

            <div class="col-md-4 center searchbar">
                <form class="form-inline form-search" role="form">
                    <div class="form-group">
                        <div class="input-group">
                            <div class="input-group-addon">
                                <span class="glyphicon glyphicon-search"></span>
                            </div>
                            <input name="dir" type="text" class="form-control search-query"
                               placeholder="Movie directory ..."/>
                        </div>
                    </div>
                    <div class="form-group">
                            <button type="submit" class="btn btn-default">Search</button>
                    </div>
                </form>
            </div>

        </div>
        <main class="row">

        </main>
    </div>
    <script id="entry-template" type="text/x-handlebars-template">
        {% raw %}
        <div class="col-md-12">
            {{#if movies}}
            <table class="table table-hover movies">
                <thead>
                <tr>
                    <th class="index">#</th>
                    <th class="filename">Filename</th>
                    <th class="chunks">Chunks</th>
                    <th class="folder">Folder</th>
                    <th class="link">Info</th>
                    <th class="screenshot">Screeny</th>
                    <th class="poster">Poster</th>
                    <th class="format">Format</th>
                    <th class="action"></th>
                </tr>
                </thead>
                <tbody>
                    {{#each movies}}
                    <tr class="movie">
                        <td class="index">
                            {{@index}}
                        </td>
                        <td class="filename">
                            {{name}}
                        </td>
                        <td class="chunks">
                            {{#each chunks}}
                            <button type="button" class='btn btn-xs btn-default chunk'>
                                {{ this }}
                            </button>
                            {{/each}}
                        </td>
                        <td class="folder">
                            {{#if folder}}
                            <span class="glyphicon glyphicon-ok"></span>
                            {{else}}
                            <span class="glyphicon glyphicon-remove"></span>
                            {{/if}}
                        </td>
                        <td class="link">
                            {{#if link}}
                            <span class="glyphicon glyphicon-ok"></span>
                            {{else}}
                            <span class="glyphicon glyphicon-remove"></span>
                            {{/if}}
                        </td>
                        <td class="screenshot">
                            {{#if screenshot}}
                            <span class="glyphicon glyphicon-ok"></span>
                            {{else}}
                            <span class="glyphicon glyphicon-remove"></span>
                            {{/if}}
                        </td>
                        <td class="poster">
                            {{#if poster}}
                            <span class="glyphicon glyphicon-ok"></span>
                            {{else}}
                            <span class="glyphicon glyphicon-remove"></span>
                            {{/if}}
                        </td>
                        <td class="format">
                            {{#if format}}
                            <span class="glyphicon glyphicon-ok"></span>
                            {{else}}
                            <span class="glyphicon glyphicon-remove"></span>
                            {{/if}}
                        </td>
                        <td class="action">
                            <button class="btn btn-xs btn-info go-imdb" value="{{path}}">GO</button>
                        </td>
                    </tr>
                    <tr class="suggestionsRow">
                        <td colspan="9">
                            <h2>IMDb Movie Search Results:</h2>
                            <ul class="suggestions center"></ul>
                            <input type="hidden" value="{{ file.fullname }}" class="file" />
                            <div class="center clearfix">
                                <button class="btn btn-danger hide-suggestions">Cancel</button>
                            </div>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
            {{else}}
            <p class="text-warning center">Please, choose a folder.</p>
            {{/if}}
        </div>

        {% endraw %}
    </script>
    <script src="/js/scripts.min.js"></script>
</body>
</html>